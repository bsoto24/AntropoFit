<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="pe.speira.antropometria">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme.AntropometriaTheme"
        tools:ignore="GoogleAppIndexingWarning">

    <activity android:name=".presentation.splash.SplashActivity"
            android:screenOrientation="fullSensor">

            <intent-filter>

                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>

            </intent-filter>

        </activity>

        <activity android:name=".presentation.grupos.GruposActivity"
            android:screenOrientation="fullSensor"/>

        <activity android:name=".presentation.pacientes.PacientesActivity"
            android:screenOrientation="fullSensor"/>

        <activity android:name=".presentation.registroPaciente.RegistroPacienteActivity"
            android:screenOrientation="fullSensor"
            android:windowSoftInputMode="adjustResize|stateHidden"/>

        <activity android:name=".presentation.detallePaciente.DetallePacienteActivity"
            android:screenOrientation="fullSensor"/>

        <activity android:name=".presentation.registroControl.RegistroControlActivity"
            android:screenOrientation="fullSensor"
            android:windowSoftInputMode="adjustResize|stateHidden"/>

        <activity
            android:name=".presentation.resultado.ResultadosActivity"
            android:screenOrientation="fullSensor"/>

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />

    </application>

</manifest>